---
import { Image, Picture } from "astro:assets";
import type { GetStaticPaths } from "astro";
import { format, parseISO } from "date-fns";
import Layout from "../components/layout.astro";
import { getPhotoFiles, getPhotos } from "../lib/photos";
import { getCaption } from "../lib/captions";
import { getImage } from "astro:assets";

export const getStaticPaths = (() => {
  const photos = getPhotos();
  return photos.map((photo) => {
    return {
      params: { ymd: photo.ymd },
      props: {
        ymd: photo.ymd,
        filename: photo.filename,
        extension: photo.extension,
      },
    };
  });
}) satisfies GetStaticPaths;

const { ymd, filename, extension } = Astro.props;

const caption = await getCaption(ymd);

const photos = getPhotos();
const ymds = photos.map((photo) => photo.ymd);
const previousYmd = ymds[ymds.indexOf(ymd) - 1];
const nextYmd = ymds[ymds.indexOf(ymd) + 1];

const title = format(parseISO(ymd), "PPPP");

const isVideo = extension === "mov";
const image = getPhotoFiles()[filename]();
const { src } = isVideo
  ? { src: undefined }
  : await getImage({ src: image, format: "jpg" });
---

<Layout title={title} ogImage={src}>
  <div>
    <div class="flex items-center justify-between">
      <p class="font-bold">{title}</p>

      <nav class="space-x-1">
        {
          previousYmd ? (
            <a
              href={`/${previousYmd}`}
              data-previous
              class="inline-block font-sans font-bold text-blue-800"
            >
              &larr;
            </a>
          ) : (
            <span class="inline-block font-sans font-bold text-gray-300">
              &larr;
            </span>
          )
        }

        {
          nextYmd ? (
            <a
              href={`/${nextYmd}`}
              data-next
              class="inline-block font-sans font-bold text-blue-800"
            >
              &rarr;
            </a>
          ) : (
            <span class="inline-block font-sans font-bold text-gray-300">
              &rarr;
            </span>
          )
        }
      </nav>
    </div>

    <p class="text-gray-400">#{ymds.indexOf(ymd) + 1}</p>

    {
      isVideo ? (
        <div class="mt-4">
          <video
            src={`/photos/${ymd}.${extension}`}
            controls
            playsinline
            class="w-full"
          />
        </div>
      ) : (
        <Image src={image} format="jpg" alt="" width={2000} class="mt-4" />
      )
    }

    {
      caption && (
        <p class="mt-4 text-gray-500 italic whitespace-pre-line [font-synthesis:none]">
          {caption}
        </p>
      )
    }
  </div>

  <script>
    window.addEventListener("keydown", (event) => {
      if (event.key === "ArrowLeft" && !event.metaKey) {
        const previousLink = document.querySelector(
          "[data-previous]"
        ) as HTMLAnchorElement;
        if (previousLink) {
          previousLink.click();
        }
      }

      if (event.key === "ArrowRight" && !event.metaKey) {
        const nextLink = document.querySelector(
          "[data-next]"
        ) as HTMLAnchorElement;
        if (nextLink) {
          nextLink.click();
        }
      }

      if (event.key === "Escape" && !event.metaKey) {
        // setTimeout works around a Chrome bug where synchronous navigation in keydown handlers is unreliable
        setTimeout(() => window.location.href = "/", 0);
      }
    });
  </script>
</Layout>
