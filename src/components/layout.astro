---
interface Props {
  title?: string;
  ogImage?: string;
}

const { title, ogImage = undefined } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title ? `${title} — ` : ""} Photo of the Day — Ben Borgers</title>
    <link rel="icon" href="https://emojicdn.elk.sh/🐙" />

    {ogImage && <meta property="og:image" content={ogImage} />}

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700"
      rel="stylesheet"
    />
  </head>
  <body class="antialiased font-mono bg-gray-200 text-gray-900">
    <div class="p-4 pb-24 sm:pt-12">
      <div class="max-w-xl mx-auto">
        <header>
          <p class="font-bold italic">
            <a href="/" class="underline text-blue-800"> Photo of the Day </a>
          </p>

          <p class="text-gray-400">
            A project by
            <a
              href="https://benborgers.com"
              class="underline decoration-gray-300"
            >
              Ben Borgers</a
            >.
          </p>
        </header>

        <main class="mt-12">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
